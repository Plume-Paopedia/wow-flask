# =============================================================================
# CONFIGURATION WOW FLASK - EXEMPLE
# =============================================================================
# Copiez ce fichier vers .env et adaptez les valeurs selon votre environnement

# =============================================================================
# APPLICATION
# =============================================================================
# Environnement : development, production
FLASK_ENV=development

# Clé secrète pour la sécurité des sessions et CSRF (générez une clé aléatoire longue)
SECRET_KEY=your-very-long-secret-key-change-this-in-production

# URL de base de l'application
APP_BASE_URL=http://localhost:5000

# Debug (uniquement en développement)
FLASK_DEBUG=true

# =============================================================================
# BASE DE DONNÉES
# =============================================================================
# SQLite pour le développement
DATABASE_URL=sqlite:///instance/app.db

# PostgreSQL pour la production
# DATABASE_URL=postgresql://username:password@localhost:5432/wowflask

# Railway PostgreSQL (automatique)
# DATABASE_URL sera défini automatiquement par Railway

# =============================================================================
# CACHE ET RATE LIMITING
# =============================================================================
# Redis (optionnel mais recommandé)
REDIS_URL=redis://localhost:6379/0

# Railway Redis (automatique)  
# REDIS_URL sera défini automatiquement par Railway

# =============================================================================
# EMAIL
# =============================================================================
# Configuration SMTP
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USE_SSL=false
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_DEFAULT_SENDER=noreply@wowflask.fr

# Mailgun (alternative)
# MAIL_SERVER=smtp.mailgun.org
# MAIL_PORT=587
# MAIL_USERNAME=postmaster@mg.yourdomain.com
# MAIL_PASSWORD=your-mailgun-api-key

# =============================================================================
# AUTHENTIFICATION BATTLE.NET (OPTIONNEL)
# =============================================================================
# Activer/désactiver Battle.net OAuth
OAUTH_ENABLE_BNET=false

# Informations de l'application Battle.net
# Obtenez ces valeurs sur https://develop.battle.net/
BATTLE_NET_CLIENT_ID=88495238ffe246c5a3f73cc731065b91
BATTLE_NET_CLIENT_SECRET=qo7ElA1BwKs46tLklteAiIUE91eIVLq8

# URI de redirection (DOIT correspondre exactement à celle configurée sur Battle.net)
BATTLE_NET_REDIRECT_URI=http://localhost:5000/auth/bnet/callback

# Région Battle.net (us, eu, kr, tw, cn)
BATTLE_NET_REGION=eu

# =============================================================================
# RECHERCHE
# =============================================================================
# Backend de recherche : sqlite_fts, pg, meilisearch
SEARCH_BACKEND=sqlite_fts

# Meilisearch (si utilisé)
MEILI_URL=http://localhost:7700
MEILI_MASTER_KEY=your-meili-master-key

# =============================================================================
# UPLOADS ET MÉDIAS
# =============================================================================
# Extensions autorisées (séparées par des virgules)
ALLOWED_UPLOAD_EXT=jpg,jpeg,png,webp,gif,mp4,webm,pdf

# Taille maximale des uploads en MB
MAX_CONTENT_LENGTH_MB=200

# Stockage local (développement)
UPLOAD_FOLDER=uploads

# S3 Compatible (production)
S3_ENDPOINT_URL=https://s3.amazonaws.com
S3_BUCKET_NAME=your-bucket-name
S3_ACCESS_KEY_ID=your-access-key-id
S3_SECRET_ACCESS_KEY=your-secret-access-key
S3_REGION=eu-west-3

# CloudFlare R2 (alternative S3)
# S3_ENDPOINT_URL=https://account-id.r2.cloudflarestorage.com
# S3_BUCKET_NAME=your-r2-bucket

# =============================================================================
# SÉCURITÉ
# =============================================================================
# Cookies sécurisés (true en production avec HTTPS)
SECURE_COOKIES=false
SESSION_COOKIE_SECURE=false

# Protection CSRF
CSRF_ENABLED=true

# Content Security Policy strict (true recommandé en production)
CSP_STRICT=false

# Protection contre les bots
RECAPTCHA_SITE_KEY=your-recaptcha-site-key
RECAPTCHA_SECRET_KEY=your-recaptcha-secret-key

# =============================================================================
# FONCTIONNALITÉS
# =============================================================================
# Permettre les inscriptions publiques
ENABLE_SIGNUP=true

# Mode invitation uniquement
ENABLE_INVITE_ONLY=false

# Modération automatique activée
AUTO_MODERATION=true

# Système de cache activé
CACHE_ENABLED=true

# =============================================================================
# ANALYTICS ET TRACKING (OPTIONNEL)
# =============================================================================
# Plausible Analytics
PLAUSIBLE_DOMAIN=wowflask.fr
PLAUSIBLE_SCRIPT_URL=https://plausible.io/js/script.js

# Google Analytics (alternative)
GA_TRACKING_ID=G-XXXXXXXXXX

# Matomo (alternative)
MATOMO_URL=https://your-matomo-instance.com
MATOMO_SITE_ID=1

# =============================================================================
# INTERNATIONALISATION
# =============================================================================
# Langue par défaut
DEFAULT_LOCALE=fr

# Langues disponibles (séparées par des virgules)
AVAILABLE_LOCALES=fr,en

# Fuseau horaire
TIMEZONE=Europe/Paris

# =============================================================================
# TASKS ASYNCHRONES (CELERY - OPTIONNEL)
# =============================================================================
# Broker Celery (Redis recommandé)
CELERY_BROKER_URL=redis://localhost:6379/1

# Backend de résultats
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# =============================================================================
# MONITORING ET LOGS
# =============================================================================
# Niveau de log : DEBUG, INFO, WARNING, ERROR, CRITICAL  
LOG_LEVEL=INFO

# Sentry pour le monitoring d'erreurs (optionnel)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# =============================================================================
# PERFORMANCE
# =============================================================================
# Durée de cache par défaut (en secondes)
CACHE_DEFAULT_TIMEOUT=300

# Nombre d'éléments par page
DEFAULT_PER_PAGE=20
MAX_PER_PAGE=100

# =============================================================================
# DÉVELOPPEMENT UNIQUEMENT
# =============================================================================
# Flask Debug Toolbar
FLASK_DEBUG_TOOLBAR_ENABLED=true

# Désactiver la vérification SSL (développement uniquement)
SSL_DISABLE=true

# Seed automatique au démarrage
AUTO_SEED=false

# =============================================================================
# RAILWAY SPECIFIC (si déploiement sur Railway)
# =============================================================================
# Port (Railway le définit automatiquement)
# PORT=8000

# Railway fournit automatiquement :
# - DATABASE_URL (PostgreSQL)
# - REDIS_URL (si Redis add-on activé)

# Variables que vous devez définir sur Railway :
# - SECRET_KEY
# - MAIL_* (configuration email)
# - BATTLE_NET_* (si OAuth activé)
# - S3_* (si stockage S3 utilisé)

# =============================================================================
# RENDER SPECIFIC (si déploiement sur Render)
# =============================================================================
# Render fournit automatiquement :
# - DATABASE_URL (PostgreSQL)
# - REDIS_URL (si Redis add-on activé)
# - PORT

# =============================================================================
# FLY.IO SPECIFIC (si déploiement sur Fly.io)
# =============================================================================
# Fly.io utilise les mêmes variables d'environnement
# Configurez-les via : flyctl secrets set KEY=value